                            AASSetContainer.RefreshDataAsync();
                            this.StateHasChanged();
                        }
                    }

                    <span>
                        &nbsp&nbsp@($"AAS#: {totalCount} size={size} offset={offset} search={search}")
                    </span>
                    <br/>

                    <div style="width: 100%; height: 80vh; overflow-x: hidden; padding: 10px;">
